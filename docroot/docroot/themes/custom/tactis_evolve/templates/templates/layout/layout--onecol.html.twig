{#
/**
 * @file
 * Theme override to display a one-column layout.
 *
 * Available variables:
 * - in_preview: Whether the plugin is being rendered in preview mode.
 * - content: The content for this layout.
 * - attributes: HTML attributes for the layout <div>.
 */
#}
{%
  set classes = [
    'layout',
    'layout--onecol',
    'pt-5',
    'pb-3',
    'section-dark' in attributes.class ? 'text-light',
    'section-dark' in attributes.class ? 'bg-black',
  ]
%}

{% set regionClasses = [
    'layout__region',
    'layout__region--content',
    'section-dark' in attributes.class ? 'container',
    'section-light' in attributes.class ? 'container',
  ]
%}
{% if content %}
  <div{{ attributes.addClass(classes) }}>
    <div {{ region_attributes.content.addClass(regionClasses) }}>
      <div class="row">
        {{ content.content }}
      </div>
    </div>
  </div>
{% endif %}
