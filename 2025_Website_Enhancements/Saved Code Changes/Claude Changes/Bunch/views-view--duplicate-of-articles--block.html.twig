{#
/**
 * @file
 * TAC-230: Hardcoded title, description, and button positioning
 *
 * EXACT FIGMA MATCH:
 * - Hardcoded "Articles" title
 * - Hardcoded description text
 * - Button positioned to right of description (not below articles)
 * - Articles in their own row below
 *
 * Template: views-view--duplicate-of-articles--block.html.twig
 */
#}
{%
  set classes = [
  'view',
  'view-' ~ id|clean_class,
  'view-id-' ~ id,
  'view-display-id-' ~ display_id,
  'articles-with-button-tac230',
  dom_id ? 'js-view-dom-id-' ~ dom_id,
]
%}
<div{{ attributes.addClass(classes) }}>
  {{ title_prefix }}
  {% if title %}
    {{ title }}
  {% endif %}
  {{ title_suffix }}
  {% if header %}
    <div class="view-header">
      {{ header }}
    </div>
  {% endif %}
  {% if exposed %}
    <div class="view-filters">
      {{ exposed }}
    </div>
  {% endif %}
  {% if attachment_before %}
    <div class="attachment attachment-before">
      {{ attachment_before }}
    </div>
  {% endif %}

  {% if rows %}
    <div class="container">

      {# TITLE SECTION - Bootstrap-first approach #}
      <div class="row mb-4">
        <div class="col-12">
          <h2 class="display-5 fw-semibold text-white mb-0 text-lowercase" style="font-family: 'League Spartan';">
            Articles.
          </h2>
        </div>
      </div>

      {# DESCRIPTION AND BUTTON ROW - Bootstrap responsive approach #}
      <div class="row mb-5">
        <div class="col-12 col-lg-8">
          {# DESCRIPTION - Responsive columns instead of fixed width #}
          <p class="fs-5 text-white mb-4 mb-lg-0" style="font-family: 'League Spartan'; line-height: 1.4;">
            As the world evolves, so do its technology, practices, and people. Our selection of thought-leadership posts, profiles, and press releases offer a snapshot of our ideas and views on the issues of the day.
          </p>
        </div>
        <div class="col-12 col-lg-4">
          {# BUTTON - Bootstrap button with consistent styling #}
          <div class="text-center text-lg-end">
            <a href="/articles" class="btn btn-outline-light btn-lg fw-semibold px-4 py-3 d-inline-flex align-items-center" style="font-family: 'League Spartan'; min-width: 220px;">
              View All Articles
              <img src="/themes/custom/tactis_evolve/images/asset_arrow/tactis-button-arrow.svg" class="ms-2" width="18" height="13" alt="">
            </a>
          </div>
        </div>
      </div>

      {# ARTICLES SECTION - Full row below with transparent card backgrounds #}
      <div class="row">
        <div class="col-12">
          <div class="view-content d-md-flex flex-row justify-content-between flex-wrap animation-container">
            {{ rows }}
          </div>
        </div>
      </div>

    </div>
  {% elseif empty %}
    <div class="view-empty">
      {{ empty }}
    </div>
  {% endif %}

  {% if pager %}
    {{ pager }}
  {% endif %}
  {% if attachment_after %}
    <div class="attachment attachment-after">
      {{ attachment_after }}
    </div>
  {% endif %}
  {% if more %}
    {{ more }}
  {% endif %}
  {% if footer %}
    <div class="view-footer">
      {{ footer }}
    </div>
  {% endif %}
  {% if feed_icons %}
    <div class="feed-icons">
      {{ feed_icons }}
    </div>
  {% endif %}
</div>

